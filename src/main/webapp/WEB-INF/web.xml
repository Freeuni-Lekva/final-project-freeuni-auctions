<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>


  <servlet>
    <servlet-name>Create</servlet-name>
    <servlet-class>servlets.CreateAccountServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>makeBid</servlet-name>
    <servlet-class>servlets.makeBidServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>profile</servlet-name>
    <servlet-class>servlets.GetMyProfileServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>itemImageUpload</servlet-name>
    <servlet-class>servlets.ItemImageUploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>profile</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>makeBid</servlet-name>
    <url-pattern>/makeBid</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Create</servlet-name>
    <url-pattern>/create_acc</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>itemImageUpload</servlet-name>
    <url-pattern>/itemImageUpload</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>frontpage.jsp</welcome-file>
  </welcome-file-list>


</web-app>
